 "css": "\r\ntable{\r\n    width:100%;\r\n    margin-top:20px;\r\n    border:1px solid black;\r\n}\r\ntr,th,td{\r\n    border:1px solid black;\r\n}\r\n.footer{\r\n    margin-top:30px;\r\n}",
 "custom_format": 1,
 "default_print_language": "en",
